{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@common/": ["common/"],
      "@modules/": ["modules/"],
      "@env/": ["env/"]
    },
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules", "dist"]
}
